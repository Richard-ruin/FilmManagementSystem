@model FilmManagementSystem.Models.Film

@{
    ViewData["Title"] = "Hapus Film";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Konfirmasi Penghapusan</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Apakah Anda yakin ingin menghapus film ini?
                    </div>

                    <div class="row mb-2">
                        <div class="col-md-3 fw-bold">@Html.DisplayNameFor(model => model.Title)</div>
                        <div class="col-md-9">@Html.DisplayFor(model => model.Title)</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-md-3 fw-bold">@Html.DisplayNameFor(model => model.Director)</div>
                        <div class="col-md-9">@Html.DisplayFor(model => model.Director)</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-md-3 fw-bold">@Html.DisplayNameFor(model => model.ReleaseYear)</div>
                        <div class="col-md-9">@Html.DisplayFor(model => model.ReleaseYear)</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-md-3 fw-bold">@Html.DisplayNameFor(model => model.Genre)</div>
                        <div class="col-md-9">@Html.DisplayFor(model => model.Genre)</div>
                    </div>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Hapus
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Batalkan
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>